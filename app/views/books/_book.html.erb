<script src="https://kit.fontawesome.com/dafc2bfea6.js" crossorigin="anonymous"></script>

<div class="container">
   <div class="row">
    <div class="col-md-3" style="background-color: orange;">
      <h2>サイドバー</h2>
      <div class="social">
       <i class="fas fa-user-cog"></i>
      </div>
      <li>New book</li>
      <h1>新規投稿</h1>
       <%= image_tag user.get_profile_image(100,100) %>
      <h2>name</h2>
       <%= user.name %>
      <h2>introduction</h2>
       <%= user.introduction %>
       <%= link_to "ユーザー編集", edit_user_path(user.id) %>

<% if book.errors.any? %>
  <%= book.errors.count %>件のエラーが発生しました
  <ul>
    <% book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: Book.new do |f| %>
  <h4>本のタイトル</h4>
  <%= f.text_field :title %>
  <h4>感想</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>
    </div>
   </div>
</div>
